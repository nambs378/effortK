<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/view_quiz"
                android:background="#181818"
                tools:context=".View.QuizSpeakActivity">


    <ImageView
            android:layout_width="360dp"
            android:layout_height="210dp"
            android:background="@drawable/vong_edit"
    />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
    >



        <RelativeLayout
                android:id="@+id/caqw"
                android:layout_width="380dp"
                android:layout_height="210dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="45dp"
                android:background="@drawable/khung"
                android:padding="15dp"
        >


            <ProgressBar
                    android:id="@+id/pg_countdown"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressTint="#fd8ee9"
                    android:secondaryProgressTint="@color/colorPrimaryDark"


            />



            <TextView
                    android:id="@+id/tv_score2"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 0"
                    android:textColor="#000000" />


            <TextView
                    android:id="@+id/tv_question_count2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/pg_countdown"
                    android:layout_marginTop="25dp"

                    android:text="Question: 1/x"
                    android:textColor="#000000" />


            <TextView
                    android:id="@+id/tv_question2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Here will be question text\Here will be question text\Here will be question text"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_below="@+id/tv_score2"
                    android:layout_marginTop="50dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
            />



        </RelativeLayout>



        <RelativeLayout
                android:id="@+id/liner_quiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/caqw"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/khung"
        >

            <Button
                    android:id="@+id/quiz_talk"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="115dp"
                    android:background="@drawable/microgradient"/>




            <TextView
                    android:id="@+id/quiz_thongbao"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textColor="#000000"
            />


            <Button
                    android:id="@+id/quiz_skip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:layout_width="340dp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bttranslate_edit2"
                    android:text="Skip"/>






        </RelativeLayout>



    </RelativeLayout>




</RelativeLayout>