<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".View.TalkTranstalteActivity"
                android:background="#000000"
                android:id="@+id/view_talk"
>




    <ImageView
            android:layout_width="360dp"
            android:layout_height="210dp"
            android:background="@drawable/vong_edit"
    />
    <ImageView
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff"/>

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorPrimary">
    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:id="@+id/aaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:text="English"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentE"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="@dimen/_160sdp"
            android:layout_below="@+id/aaaa"
            android:layout_marginTop="10dp"

            >

        <TextView
                android:id="@+id/tv_talk_eng"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:background="@drawable/khung"
                android:padding="15dp"
                android:textSize="17dp"
                android:textColor="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        <Button
                android:id="@+id/bt_talk_speak_english"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.93"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/speaker1" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
            android:id="@+id/bbbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vietnamese"
            android:textStyle="bold"
            android:layout_below="@+id/parentE"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/bbbb"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginTop="10dp"

            >

        <TextView
                android:id="@+id/tv_talk_viet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"

                android:background="@drawable/khung"
                android:padding="15dp"
                android:textSize="17dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#000000"
                />

        <Button
                android:id="@+id/bt_talk_speak_vietnamese"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.93"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/speaker1" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
            android:id="@+id/bt_talk_english"
            android:layout_width="120dp"
            android:layout_height="115dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/talkenglish"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginLeft="40dp"/>

    <Button
            android:id="@+id/bt_talk_vietnamese"
            android:layout_width="120dp"
            android:layout_height="115dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/talkviet"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginRight="40dp"
    />

</RelativeLayout>