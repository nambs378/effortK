<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".View.NotiActivity"
                android:id="@+id/view_noti"
>

    <ImageView
            android:layout_width="360dp"
            android:layout_height="210dp"
            android:background="@drawable/vong_edit" />


    <ImageView
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff"/>

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorPrimary">
    </androidx.appcompat.widget.Toolbar>

    //// 392
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:background="@drawable/khung"
            android:layout_marginTop="63dp"
    >


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_notivoca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/bt_addnotivoca"/>



        <TextView
                android:id="@+id/bt_addnotivoca"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:text="Thêm từ vựng"
                android:textSize="22dp"
                android:textStyle="italic|bold"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/ripple_bt_add_noti" />

    </RelativeLayout>

</RelativeLayout>