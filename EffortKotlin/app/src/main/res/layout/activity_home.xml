<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/view_home"
                tools:context=".View.HomeActivity">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
    >

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="360dp"
                            android:layout_height="203dp"
                            android:background="@drawable/vong_edit"
                            android:adjustViewBounds="true"
                    />

                    <ImageView
                            android:id="@+id/logo__home"
                            android:layout_width="250dp"
                            android:layout_height="140dp"
                            android:background="@drawable/logo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="75dp"
                            android:adjustViewBounds="true"

                            />

                    <LinearLayout
                            android:id="@+id/liner_home"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="65dp"
                            android:layout_below="@+id/logo__home"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/khung"
                            android:orientation="vertical"
                            android:weightSum="3">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="2">

                            <ImageView
                                    android:id="@+id/bt_gomulti"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/ripple_button_gomulti"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    />

                            <ImageView
                                    android:id="@+id/bt_golisten"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp"

                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:background="@drawable/ripple_button_golisten" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="2">

                            <ImageView
                                    android:id="@+id/bt_gospeak"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp"
                                    android:clickable="true"

                                    android:background="@drawable/ripple_button_gospeaking"
                                    android:adjustViewBounds="true" />

                            <ImageView
                                    android:id="@+id/bt_goGrammar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp"
                                    android:clickable="true"

                                    android:background="@drawable/ripple_button_gogrammar"
                                    android:adjustViewBounds="true" />
                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="2">

                            <ImageView
                                    android:id="@+id/bt_goTrans"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp"
                                    android:clickable="true"

                                    android:background="@drawable/ripple_button_gotranslate"
                                    android:adjustViewBounds="true" />

                            <ImageView
                                    android:id="@+id/go_noti"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp"
                                    android:clickable="true"

                                    android:background="@drawable/ripple_button_gonotification"                                    />
                            />


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                            android:layout_below="@+id/liner_home"
                            android:id="@+id/zxczxcxczxzczcz"
                            android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Created by Nhat Nam and Cong Sang"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:textColor="#000000"
                    />
                    <TextView
                            android:layout_below="@+id/zxczxcxczxzczcz"
                            android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Cao đẳng Thực hành FPT Polytechnic"
                            android:textSize="12dp"
                              android:gravity="center"
                            android:textColor="#000000"
                            android:layout_marginBottom="10dp"

                    />

                </RelativeLayout>


    </ScrollView>








</RelativeLayout>